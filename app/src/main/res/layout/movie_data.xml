<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#DD000000"
                android:padding="20dp">


    <TextView
        android:id="@+id/title_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:text="Title"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_lbl"
        android:layout_alignStart="@+id/title_lbl"
        android:layout_marginStart="0dp"
        android:layout_marginTop="14dp"
        android:text="Title text"/>

    <TextView
        android:id="@+id/sinopsis_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_txt"
        android:layout_alignStart="@+id/title_txt"
        android:layout_marginStart="0dp"
        android:layout_marginTop="12dp"
        android:text="Sinopsis"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/sinopsis_txt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sinopsis_lbl"
        android:layout_alignStart="@+id/sinopsis_lbl"
        android:layout_marginStart="1dp"
        android:layout_marginTop="12dp"
        android:text="Sinopsis text"/>

    <RatingBar
        android:id="@+id/rating_bar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:numStars="10"/>

</RelativeLayout>
